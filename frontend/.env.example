# MedTechDB Frontend Environment Variables
# Create this file as .env.local in the frontend directory

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL
REACT_APP_API_URL=http://localhost:5000
# For production: REACT_APP_API_URL=https://api.yourdomain.com

# ============================================
# APPLICATION ENVIRONMENT
# ============================================
REACT_APP_ENV=development
# For production: REACT_APP_ENV=production

# ============================================
# LOGGING & ANALYTICS
# ============================================
# Enable verbose logging
REACT_APP_DEBUG=false

# ============================================
# FEATURE FLAGS
# ============================================
# Enable error reporting
REACT_APP_ERROR_REPORTING=true

# ============================================
# OPTIONAL - THIRD PARTY SERVICES
# ============================================
# Add any external service keys here
# REACT_APP_SENTRY_DSN=
# REACT_APP_ANALYTICS_KEY=
